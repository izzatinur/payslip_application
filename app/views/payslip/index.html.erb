<%= form_for :payslips, url: payslips_multiple_path,  method: :post, remote: :true, html: {class: 'form-horizontal'} do |form| %>
	<h1>Generate Payslip</h1>

<div class="form-group">
  <label class="mt-2">Please Select Employee Name</label>
	<%= form.select :employee_id, options_from_collection_for_select(@employees_for_select, :id, :first_name), {include_blank: false, include_hidden: false}, multiple: true, size: 5, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <label>Start Date</label>
  <%= form.datetime_select :pay_period_start_date, class:"form-control" %>
</div>
<div class="form-group">
  <label>End Date</label>
  <%= form.datetime_select :pay_period_end_date, class:"form-control" %>
</div>
<div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>

<%= render 'list', payslips: @payslips, class:"mt-5" %>

<% end %>